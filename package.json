{
  "name": "webpack-runner",
  "version": "0.5.0",
  "description": "Quickly stand up a React or Vanilla JS app with customizable webpack presets",
  "main": "index.js",
	"scripts": {
		"test-app-react": "webpack-dev-server --config ./tests/app-react/config.js --mode development",
		"test-app-react-build": "webpack --config ./tests/app-react/config.js --env test-build",

		"runner": "node index.js --config ./tests/app-js/config.js --env test-build",
		"runner-dev": "node index.js --config ./tests/app-js/config.js --mode development",
		"runner-build": "node index.js --config ./tests/app-js/config.js --mode production",

	},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clubajax/webpack-runner.git"
  },
  "keywords": [
    "webpack",
    "javascript",
    "react"
  ],
  "author": "clubajax",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clubajax/webpack-runner/issues"
  },
  "homepage": "https://github.com/clubajax/webpack-runner#readme",
